<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.grillbrickstudios.modalist.view.ListActivity">

	<ListView
		android:id="@+id/listView"
		android:layout_width="match_parent"
		android:layout_height="match_parent"/>

	<Button
		android:id="@+id/btn_add_item"
		style="?android:attr/buttonStyleSmall"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"
		android:onClick="addListItem"
		android:text="@string/add_item"
		android:textSize="@dimen/text_size"/>

	<Button
		android:id="@+id/btn_delete_checked"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"
		android:onClick="deleteCheckedItems"
		android:shadowColor="@android:color/holo_red_dark"
		android:text="@string/delete_checked"
		android:textSize="@dimen/text_size"
		android:visibility="invisible"/>

</RelativeLayout>
